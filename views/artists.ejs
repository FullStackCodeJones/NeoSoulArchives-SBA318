<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Artists</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Artists</h1>

    <!-- Loop over the artists array to display their information -->
    <div class="artists-list">
      <% artists.forEach(artist => { %>
      <div class="artist">
        <h2><%= artist.name %></h2>
        <p><strong>Genre:</strong> <%= artist.genre %></p>
        <p><strong>Bio:</strong> <%= artist.bio %></p>
        <p><strong>Popular Song:</strong> <%= artist.popularSong %></p>

        <!-- Edit Form -->
        <form action="/artists/<%= artist.id %>?_method=PUT" method="POST">
          <input type="text" name="name" value="<%= artist.name %>" />
          <input type="text" name="genre" value="<%= artist.genre %>" />
          <input type="text" name="bio" value="<%= artist.bio %>" />
          <input
            type="text"
            name="popularSong"
            value="<%= artist.popularSong %>"
          />
          <button type="submit">Edit</button>
        </form>

        <!-- Delete Form -->
        <form action="/artists/<%= artist.id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      </div>
      <% }); %>
    </div>
  </body>
</html>
